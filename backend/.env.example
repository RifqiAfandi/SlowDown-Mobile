# ===========================================
# SLOWDOWN BACKEND - Environment Configuration
# ===========================================
# SECURITY WARNING: Never commit this file with real values!
# Copy this to .env and fill in your actual values
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=slow_down
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# SECURITY: Generate a strong secret for production using:
# openssl rand -hex 64
JWT_SECRET=your_jwt_secret_here_generate_using_openssl_rand_hex_64
JWT_EXPIRES_IN=7d

# Google OAuth
# Get this from Firebase Console > Project Settings > Your apps > Web app
GOOGLE_CLIENT_ID=YOUR_WEB_CLIENT_ID.apps.googleusercontent.com

# Admin Email
# This email will have admin privileges
ADMIN_EMAIL=your_admin_email@gmail.com
