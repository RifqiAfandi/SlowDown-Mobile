# ===========================================
# SLOWDOWN APP - Environment Configuration
# ===========================================
# SECURITY WARNING: Never commit this file with real values!
# Copy this to .env and fill in your actual values
# ===========================================

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# API Configuration
# Use your local IP for device testing (e.g., 192.168.x.x)
API_BASE_URL=http://localhost:3000/api

# Admin Configuration
# This email will have admin privileges
ADMIN_EMAIL=your_admin_email@gmail.com

# Google OAuth Configuration
# Get this from Firebase Console > Project Settings > Your apps > Web app
GOOGLE_WEB_CLIENT_ID=YOUR_WEB_CLIENT_ID.apps.googleusercontent.com

# App Configuration
APP_NAME=SlowDown
DEFAULT_DAILY_LIMIT=30
TIMEZONE_OFFSET=7

# ===========================================
# BACKEND ONLY (in backend/.env)
# ===========================================
# JWT_SECRET=generate_with_openssl_rand_hex_64
# JWT_EXPIRES_IN=7d
# PORT=3000
# NODE_ENV=development
