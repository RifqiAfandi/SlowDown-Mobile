rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'rifqitriafandi.2002@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read their own profile
      // Admin can read all profiles
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Users can create their own profile on first login
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Users can update only certain fields of their own profile
      // Admin can update any user's profile
      allow update: if isAuthenticated() && (
        (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'dailyLimitMinutes', 'isBlocked'])) ||
        isAdmin()
      );
      
      // Only admin can delete users
      allow delete: if isAdmin();
    }
    
    // Usage records collection
    match /usageRecords/{recordId} {
      // Users can read their own usage records
      // Admin can read all usage records
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Users can create and update their own usage records
      allow create, update: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only admin can delete usage records
      allow delete: if isAdmin();
    }
    
    // Time requests collection
    match /timeRequests/{requestId} {
      // Users can read their own time requests
      // Admin can read all time requests
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Users can create their own time requests
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Only admin can update time requests (approve/reject)
      allow update: if isAdmin();
      
      // Only admin can delete time requests
      allow delete: if isAdmin();
    }
    
    // Admin stats collection (read-only for admin)
    match /adminStats/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions should write
    }
  }
}
